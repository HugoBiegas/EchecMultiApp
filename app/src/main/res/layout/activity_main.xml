<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Connection.MainActivity">


    <ImageView
        android:id="@+id/ProfileImage"
        android:layout_width="160dp"
        android:layout_height="156dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/profiledab" />

    <TextView
        android:id="@+id/ProfileUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProfileImage"
        android:layout_centerInParent="true"
        android:text="loading..."
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProfileImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="70px"
        android:text="loading..." />

    <Button
        android:id="@+id/checkRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="18dp"
        android:text="Jouer !" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="209dp"
        android:layout_marginBottom="18dp"
        android:text="DÃ©connexion"

        />

    <TextView
        android:id="@+id/victories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProfileImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="140px"
        android:text="loading..." />

    <TextView
        android:id="@+id/loses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProfileImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="210px"
        android:text="loading..." />

    <TextView
        android:id="@+id/winrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProfileImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="280px"
        android:text="loading..." />


</RelativeLayout>